@using CoreCampProject.Controllers
@model List<Class1>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad soyad</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Name</td>
            <td><a href="/EmployeeTest/EditEmployee/@item.ID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/EmployeeTest/DeleteEmployee/@item.ID" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>
<br />
<a href="/EmployeeTest/AddEmployee" class="btn btn-primary">Yeni Çalışan Ekle</a>

